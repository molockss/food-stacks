<%- include('partials/header') -%>

<main class="container card-container up">
  <div class="row justify-content-center mb-4 space-div hide">
    <section class="col-6 mb-4 space login_input">
      <h1>Sign in with email</h1> <br> 
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger title-div"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-4 space login_input">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-5 login_input">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-outline-dark">Sign In</button>
        <div class="row">
          <div class="mt-2 col-md-12 mb-5 "> 
            <a href="/auth/google" class="btn btn-outline-danger"><i class="fab fa-google left"></i>&nbsp Sign In with Google</a> <br><br>
            <!-- <button href="/auth/login" type="submit" action="login" class="btn btn-secondary ">Sign In with Microsoft </button> -->
            <a href="/signup" class="light-blue-text text-darken-3">No account yet? Sign up</a>
          </div>
          
        </div>
        
      </form>
    
    <div>
        <form action="/login" method="POST">
            <div>
                <label for="email" class="left"></label>
                <input type="email" name="email" id="email" value="account@demo.com" hidden/>
                <label for="password" class="left"></label>
                <input type="password" name="password" id="password" value="accountdemo123" hidden/>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-success">Explore a demo account<br>(No Sign-up Required)</button>
            </div>
        </form>
    </div>

  
    
       


      </div>
    </section>

</main>

<%- include('partials/footer') -%>
